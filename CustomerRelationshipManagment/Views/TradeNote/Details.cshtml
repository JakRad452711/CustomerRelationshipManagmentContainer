@model CustomerRelationshipManagment.Models.TradeNoteModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>TradeNoteModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contents)
        </dt>
        <dd class = "col-sm-10">
            @{ 
                String toDisplay = Model.Contents;
                <textarea cols="100" rows="10" readonly>@toDisplay</textarea>
            }
        </dd>
        <dt class = "col-sm-2">
            Associated companies id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AssociatedCompanyId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatorId)
        </dt>
        <dd class = "col-sm-10">
            Creator's id
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
